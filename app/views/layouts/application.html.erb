          <ul class="nav navbar-nav navbar-right">
            <li class="<%= active_class(root_path) %>"><%= link_to 'Find Jobs', jobs_path %></li>
            <li class="<%= active_class(about_path) %>"><%= link_to 'About', about_path %></li>
            <li class="<%= active_class(about_path) %>">

              <% if current_user %>
                Signed in as <%= current_user.email %>
                <%= link_to 'Logout', logout_path, method: :delete %>

              <% else %>
                <%= link_to 'Signup', new_user_path %>
              <% end %>
              </li>
            <li class="<%= active_class(login_path) %>"><%= link_to 'Login', login_path %></li>

            <li class="<%= active_class(contact_path) %>"><%= link_to 'Contact', contact_path %></li>

            <li class="<%= active_class(news_path) %>"><%= link_to 'RoR News', news_path %></li>

              </ul>
            </li>
          </ul>
        </div>
  </div>
