<%= form_tag(jobs_path, method: 'get') do %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag("search") %>
<% end %>

<ul>
  <% @search_results.each_with_index do |job, index| %>
    <li>
      <div>

        <p><b> <%= link_to job.job_title, job.url, target: "_blank" %> <%= index %> of 50 </b></p>
        <p><%= job.company %> </p>
        <p> <%= job.formatted_location %> </p>
        <p><%= job.snippet %> </p>
      </div>

    </li>
    <hr>
  <% end %>
  <%= link_to 'Next Page', jobs_path(start_at: @next_page) %>

</ul>

